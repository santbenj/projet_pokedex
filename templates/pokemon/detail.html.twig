{# templates/pokemon/detail.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Détails du Pokémon{% endblock %}

{% block body %}
<div class="container mt-5 text-center">
    <h1>{{ pokemon.nom | capitalize }}</h1>
    <img src="{{ pokemon.image }}" class="img-fluid mb-4" alt="{{ pokemon.nom }}">

    <div class="mb-3">
        {% for type in [pokemon.type1, pokemon.type2] %}
            {% if type %}
                <span class="badge badge-{{ type | lower }}">{{ type | capitalize }}</span>
            {% endif %}
        {% endfor %}
    </div>

    <h3>Informations</h3>
    <p><strong>Poids :</strong> {{ pokemon.poids }} hectogrammes</p>
    <p><strong>Taille :</strong> {{ pokemon.taille }} décimètres</p>

    <h3>Talents</h3>
    <ul class="list-unstyled">
        {% for ability in pokemon.abilities %}
            <li>
                <strong>{{ ability.nom | capitalize }}</strong>
                {% if ability.isHidden %}
                    <span class="text-muted">(Talent caché)</span>
                {% endif %}
            </li>
        {% endfor %}
    </ul>

    <h3>Statistiques</h3>
    <div class="progress mb-2">
        <div class="progress-bar bg-success" role="progressbar" style="width: {{ pokemon.statistique.hp }}%;" aria-valuenow="{{ pokemon.statistique.hp }}" aria-valuemin="0" aria-valuemax="255">
            HP: {{ pokemon.statistique.hp }}
        </div>
    </div>
    <div class="progress mb-2">
        <div class="progress-bar bg-danger" role="progressbar" style="width: {{ pokemon.statistique.attack }}%;" aria-valuenow="{{ pokemon.statistique.attack }}" aria-valuemin="0" aria-valuemax="190">
            Attaque: {{ pokemon.statistique.attack }}
        </div>
    </div>
            <div class="progress mb-2">
            <div class="progress-bar bg-info" role="progressbar" style="width: {{ pokemon.statistique.defense }}%;" aria-valuenow="{{ pokemon.statistique.defense }}" aria-valuemin="0" aria-valuemax="230">
                Défense: {{ pokemon.statistique.defense }}
            </div>
        </div>
        <div class="progress mb-2">
            <div class="progress-bar bg-warning" role="progressbar" style="width: {{ pokemon.statistique.specialAttack }}%;" aria-valuenow="{{ pokemon.statistique.specialAttack }}" aria-valuemin="0" aria-valuemax="194">
                Attaque Spéciale: {{ pokemon.statistique.specialAttack }}
            </div>
        </div>
        <div class="progress mb-2">
            <div class="progress-bar bg-secondary" role="progressbar" style="width: {{ pokemon.statistique.specialDefense }}%;" aria-valuenow="{{ pokemon.statistique.specialDefense }}" aria-valuemin="0" aria-valuemax="230">
                Défense Spéciale: {{ pokemon.statistique.specialDefense }}
            </div>
        </div>
        <div class="progress mb-2">
            <div class="progress-bar bg-dark" role="progressbar" style="width: {{ pokemon.statistique.speed }}%;" aria-valuenow="{{ pokemon.statistique.speed }}" aria-valuemin="0" aria-valuemax="180">
                Vitesse: {{ pokemon.statistique.speed }}
            </div>
        </div>
    </div>
</div>
{% endblock %}

