{# templates/pokemon/edit.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Modifier un Pokémon{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center">Modifier le Pokémon: {{ pokemon.nom | capitalize }}</h1>

    {{ form_start(form) }}
        <div class="form-group">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.nom) }}
        </div>

        <div class="form-group">
            {{ form_label(form.description) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.description) }}
        </div>

        <div class="form-group">
            {{ form_label(form.poids) }}
            {{ form_widget(form.poids, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.poids) }}
        </div>

        <div class="form-group">
            {{ form_label(form.taille) }}
            {{ form_widget(form.taille, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.taille) }}
        </div>

        <div class="form-group">
            {{ form_label(form.type1) }}
            {{ form_widget(form.type1, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.type1) }}
        </div>

        <div class="form-group">
            {{ form_label(form.type2) }}
            {{ form_widget(form.type2, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.type2) }}
        </div>

        <div class="form-group">
            {{ form_label(form.image) }}
            {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
            {{ form_errors(form.image) }}
        </div>

        <h3>Statistiques</h3>
        {{ form_widget(form.statistique) }}

        <button type="submit" class="btn btn-primary">Modifier le Pokémon</button>
    {{ form_end(form) }}

    <div class="mt-4">
        <a href="{{ path('pokemon_list') }}" class="btn btn-secondary">Retour à la liste des Pokémon</a>
    </div>
</div>
{% endblock %}
